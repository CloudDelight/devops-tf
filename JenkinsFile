pipeline {
    agent any
    stages {
        stage ('terraform plan') {
       steps {
           sh 'wget https://releases.hashicorp.com/terraform/0.14.9/terraform_0.14.9_linux_amd64.zip'
           sh 'unzip terraform_0.14.9_linux_amd64.zip'
           sh 'mv terraform /usr/local/bin/'
           sh "terraform -v"
       } 
    }
    }
}

